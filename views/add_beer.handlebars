<div class="container">
    <form action="/beer" method="post">
        <legend>Add A Beer</legend>
        
        <div class="form-group">
            <label for="beer_name">Beer Name</label>
            <input type="text" class="form-control" id="beer_name" name="beer_name" placeholder="beer name" required>
        </div>
        
        <div class="form-group">
            <label for="beer_style">Beer Style</label>
            <select class="form-control" id="beer_style" name="beer_style" required>
                <option>IPA</option>
                <option>Pale Ale</option>
                <option>DIPA</option>
                <option>Vienna Lager</option>
                <option>Adjunct Lager</option>
                <option>Stout</option>
            </select>
        </div>
        
        <label for="beer_rating">Rating</label>
        <div class="form-group" id="beer_rating">
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="beer_rating" id="rating_1" value="1" required> 1
                </label>
            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="beer_rating" id="rating_2" value="2" required> 2
                </label>
            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="beer_rating" id="rating_3" value="3" required> 3
                </label>
            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="beer_rating" id="rating_4" value="4" required> 4
                </label>
            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="beer_rating" id="rating_5" value="5" required> 5
                </label>
            </div>
        </div>

        <div class="form-group">
            <label for="beer_review">Review</label>
            <textarea class="form-control" id="beer_review" name="beer_review" rows="3"></textarea>
        </div>

        <div class="form-group">
            <label for="beer_location">Location</label>
            <textarea class="form-control" id="beer_location" name="beer_location" rows="3"></textarea>
        </div>

        <input type="submit" value="Submit" class="btn btn-primary">
    </form>
</div>